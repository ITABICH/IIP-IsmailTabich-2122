<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="1050" Background="LightBlue">
    <Grid>
        <Slider x:Name="sldVolumeSlider" HorizontalAlignment="Left" Height="44" Margin="20,0,0,0" VerticalAlignment="Center" Width="1000" ValueChanged="Slider_ValueChanged" Minimum="0" Maximum="100" Value="0" IsSnapToTickEnabled="True" TickFrequency="5"/>
        <Label x:Name="lblVolume" Content="Volume: 0" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Height="61" Width="250" FontSize="36" HorizontalContentAlignment="Center" Background="Beige"/>

    </Grid>
</Window>
